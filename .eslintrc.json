{
  "env": {
    "browser": true,
    "es6": true,
    "jasmine": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "project": "./tsconfig.json",
    "sourceType": "module"
  },
  "plugins": [
    "prettier",
    "jest",
    "eslint-plugin-tsdoc",
    "@typescript-eslint"
  ],
  "rules": {
    "@typescript-eslint/no-unused-vars": [
      2,
      {
        "args": "none"
      }
    ],
    "arrow-body-style": [
      "error",
      "as-needed"
    ],
    "no-unused-vars": "off",
    "no-use-before-define": "off",
    "prettier/prettier": "error",
    "tsdoc/syntax": "error"
  }
}
