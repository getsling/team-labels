{
  "author": "Sling <admin@getsling.com>",
  "dependencies": {
    "@octokit/types": "^6.34.0",
    "body-parser": "^1.19.0",
    "bottleneck": "^2.19.5",
    "probot": "^11.0.1"
  },
  "description": "Add labels to issues and PRs based on the assignee.",
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^3.1.1",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.19",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.2.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "jest": "^26.6.3",
    "nock": "^13.0.5",
    "prettier": "^2.4.1",
    "smee-client": "^1.2.2",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "engines": {
    "node": ">= 10.13.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "jasmine": true,
      "jest": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 12,
      "project": "./tsconfig.json",
      "sourceType": "module"
    },
    "plugins": [
      "prettier",
      "jest",
      "eslint-plugin-tsdoc",
      "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        2,
        {
          "args": "none"
        }
      ],
      "arrow-body-style": [
        "error",
        "as-needed"
      ],
      "no-unused-vars": "off",
      "no-use-before-define": "off",
      "prettier/prettier": "error",
      "tsdoc/syntax": "error"
    }
  },
  "homepage": "https://github.com/getsling/team-labels",
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 90
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/test/"
    ],
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.[tj]sx?$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "license": "ISC",
  "name": "team-labels",
  "packageManager": "yarn@3.1.0",
  "prettier": {
    "bracketSpacing": true,
    "printWidth": 100,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none"
  },
  "private": true,
  "scripts": {
    "build": "tsc",
    "lint": "eslint --ext ts,js,tsx,jsx",
    "start": "probot run ./lib/index.js",
    "test": "jest"
  },
  "version": "1.0.0"
}
